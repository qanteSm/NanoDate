{
    "name": "@qantesm/nanodate",
    "version": "0.2.1",
    "description": "World's smallest date library. Zero-locale-payload. Intl-native.",
    "type": "module",
    "main": "dist/nanodate.cjs.js",
    "module": "dist/nanodate.esm.js",
    "types": "dist/nanodate.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/nanodate.d.ts",
            "import": "./dist/nanodate.esm.js",
            "require": "./dist/nanodate.cjs.js"
        },
        "./lite": {
            "types": "./dist/lite.d.ts",
            "import": "./dist/lite.esm.js",
            "require": "./dist/lite.cjs.js"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "rollup -c",
        "test": "vitest",
        "test:run": "vitest run",
        "size": "size-limit",
        "bench": "node benchmarks/index.js",
        "prepublishOnly": "npm run build && npm run size"
    },
    "size-limit": [
        {
            "path": "dist/nanodate.esm.js",
            "limit": "10 KB",
            "name": "Full bundle"
        },
        {
            "path": "dist/lite.esm.js",
            "limit": "1 KB",
            "name": "Lite bundle"
        }
    ],
    "keywords": [
        "date",
        "time",
        "intl",
        "lightweight",
        "immutable",
        "timezone",
        "zero-locale",
        "temporal"
    ],
    "author": {
        "name": "Muhammet Ali Büyük",
        "email": "iletisim@alibuyuk.net",
        "url": "https://alibuyuk.net"
    },
    "homepage": "https://github.com/qantesm/nanodate#readme",
    "bugs": {
        "url": "https://github.com/qantesm/nanodate/issues",
        "email": "iletisim@alibuyuk.net"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/qantesm/nanodate.git"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^11.0.0",
        "rollup": "^4.9.0",
        "@rollup/plugin-terser": "^0.4.4",
        "size-limit": "^11.0.0",
        "vitest": "^2.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
